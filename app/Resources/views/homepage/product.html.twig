{% extends 'base.html.twig' %}

{% block body %}

    <div class="row my-4">
        <div class="col">
            <h1 class="mb-4">{{ product.name }}</h1>
            <div class="row">
                <div class="col mb-5">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="{{ asset("img/product/"~product.image) }}" class="img-fluid" alt="">
                        </div>
                        <div class="col-sm-8">
                            <p class="my-1">{{ product.description }}</p>
                            <p class="h5 my-2">{{ product.price | localizedcurrency('EUR')}}</p>
                            <p class="my-2 text-success">In stock</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% endblock %}